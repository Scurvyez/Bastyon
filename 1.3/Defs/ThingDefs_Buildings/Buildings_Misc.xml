<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!--==================== Expositor ====================-->

    <ThingDef ParentName="BuildingBase">
        <defName>Bast_Expositor</defName>
        <label>expositor</label>
        <description>This expositor enables the construction of advanced security assemblies. The eternal flame core enclosed within the containment field is a source of great power and knowledge.\n\nKeep it safe. Keep it contained!</description>
        <graphicData>
            <texPath>Things/Building/Misc/Bast_Expositor</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
            <drawSize>4</drawSize>
            <drawOffset>(0,0,0.5)</drawOffset>
        </graphicData>
        <uiIconPath>Things/Building/Misc/Bast_Expositor</uiIconPath>
        <uiIconOffset>(0, -0.15)</uiIconOffset>
        <uiIconScale>1.4</uiIconScale>
        <researchPrerequisites>
            <li>Expositor</li>
        </researchPrerequisites>
        <size>(2,3)</size>
        <rotatable>false</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <passability>Impassable</passability>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>0.5</fillPercent>
        <designationHotKey>Misc4</designationHotKey>
        <designationCategory>Misc</designationCategory>
        <minifiedDef>MinifiedThing</minifiedDef>
        <canOverlapZones>false</canOverlapZones>
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <thingCategories>
            <li>BuildingsMisc</li>
        </thingCategories>
        <statBases>
            <MaxHitPoints>350</MaxHitPoints>
            <WorkToBuild>10000</WorkToBuild>
            <Mass>50</Mass>
            <Flammability>1.0</Flammability>
        </statBases>
        <costList>
            <Steel>40</Steel>
            <Plasteel>50</Plasteel>
            <Gold>20</Gold>
            <ComponentIndustrial>8</ComponentIndustrial>
            <Bast_Eternal_Flame_Core>1</Bast_Eternal_Flame_Core>
        </costList>
        <building>
            <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
        </building>
        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <shortCircuitInRain>true</shortCircuitInRain>
                <basePowerConsumption>200</basePowerConsumption>
            </li>
            <li Class="CompProperties_Glower">
                <glowRadius>6</glowRadius>
                <glowColor>(12,196,246)</glowColor>
            </li>
            <li Class="CompProperties_Breakdownable" />
            <li Class="CompProperties_Flickable" />
            <li Class="CompProperties_Facility">
                <statOffsets>
                    <WorkTableWorkSpeedFactor>0.1</WorkTableWorkSpeedFactor>
                </statOffsets>
                <maxSimultaneous>1</maxSimultaneous>
            </li>
        </comps>
        <placeWorkers>
            <li>PlaceWorker_ShowFacilitiesConnections</li>
        </placeWorkers>
        <constructionSkillPrerequisite>9</constructionSkillPrerequisite>
    </ThingDef>

    <!--==================== Repeller ====================-->

    <ThingDef Name="Bast_Repeller" ParentName="BuildingBase">
        <defName>Bast_Repeller</defName>
        <thingClass>Bastyon.BuildingRepeller</thingClass>
        <label>repeller</label>
        <description>PLACEHOLDER TEXT FOR NOW</description>
        <category>Building</category>
        <graphicData>
            <texPath>Things/Building/Misc/Bast_Repeller</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shaderType>Transparent</shaderType>
            <drawRotated>false</drawRotated>
            <drawSize>4</drawSize>
            <drawOffset>(0,0,.5)</drawOffset>
            <damageData>
                <rect>(0.35,0.35,0.3,0.3)</rect>
            </damageData>
        </graphicData>
        <uiIconPath>Things/Building/Misc/Bast_Repeller</uiIconPath>
        <uiIconOffset>(0, -0.15)</uiIconOffset>
        <uiIconScale>1.4</uiIconScale>
        <rotatable>false</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <passability>Impassable</passability>
        <blockWind>true</blockWind>
        <researchPrerequisites>
            <li>Expositor</li>
        </researchPrerequisites>
        <size>(2,3)</size>
        <canOverlapZones>false</canOverlapZones>
        <constructEffect>ConstructMetal</constructEffect>
        <tickerType>Normal</tickerType>
        <drawerType>RealtimeOnly</drawerType>
        <fillPercent>0.5</fillPercent>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToBuild>50</WorkToBuild>
            <Flammability>0</Flammability>
        </statBases>
        <selectable>true</selectable>
        <costList>
            <Steel>30</Steel>
            <Gold>5</Gold>
            <Plasteel>10</Plasteel>
            <ComponentIndustrial>1</ComponentIndustrial>
            <Bast_Eternal_Flame_Core_Shard>1</Bast_Eternal_Flame_Core_Shard>
        </costList>
        <building>
            <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
            <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
            <soundAmbient>ShipReactor_Ambience</soundAmbient>
        </building>
        <soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
        <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
        <resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
        <placeWorkers>
            <li>PlaceWorker_Heater</li>
            <li>Bastyon.PlaceWorker_RepellerDesignator</li>
            <li>Bastyon.PlaceWorker_RepellerConnectionRadius</li>
        </placeWorkers>
        <drawPlaceWorkersWhileSelected>false</drawPlaceWorkersWhileSelected>
        <comps>
            <li Class="CompProperties_Breakdownable" />
            <li Class="Bastyon.CompProperties_RepelMonster">
                <BuildingConnectionRadius>20</BuildingConnectionRadius>
            </li>
        </comps>
        <designationCategory>Security</designationCategory>
    </ThingDef>

</Defs>