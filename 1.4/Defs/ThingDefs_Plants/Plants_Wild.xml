<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--==================== Gleaming Berry Plant ====================-->

    <ThingDef ParentName="PlantBase">
        <defName>Plant_GleamingBerry</defName>
        <label>gleaming berry bush</label>
        <description>A vibrant alien-like berry bush. I wonder where it came from...</description>
        <selectable>true</selectable>
        <neverMultiSelect>false</neverMultiSelect>
        <fillPercent>0.20</fillPercent>
        <pathCost>30</pathCost>
        <statBases>
            <MaxHitPoints>120</MaxHitPoints>
            <Nutrition>0.50</Nutrition>
        </statBases>
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>5.9</glowRadius>
                <glowColor>(0,255,234)</glowColor>
            </li>
        </comps>
        <graphicData>
            <texPath>Things/Plant/GleamingBerryPlant/GleamingBerryPlantA</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <shadowData>
                <volume>(0.55, 0.2, 0.2)</volume>
                <offset>(0,0,-0.25)</offset>
            </shadowData>
        </graphicData>
        <plant>
            <fertilityMin>0.5</fertilityMin>
            <fertilitySensitivity>0.5</fertilitySensitivity>
            <growDays>6</growDays>
            <leaflessGraphicPath>Things/Plant/GleamingBerryPlant_Leafless/GleamingBerryPlant_LeaflessA</leaflessGraphicPath>
            <immatureGraphicPath>Things/Plant/GleamingBerryPlant_Immature/GleamingBerryPlant_ImmatureA</immatureGraphicPath>
            <harvestYield>10</harvestYield>
            <harvestWork>250</harvestWork>
            <harvestTag>Standard</harvestTag>
            <harvestAfterGrowth>0.30</harvestAfterGrowth>
            <harvestedThingDef>RawGleamingBerries</harvestedThingDef>
            <wildClusterRadius>5</wildClusterRadius>
            <wildClusterWeight>250</wildClusterWeight>
            <visualSizeRange>0.95~1.7</visualSizeRange>
            <topWindExposure>0.3</topWindExposure>
            <wildOrder>2</wildOrder>
            <purpose>Food</purpose>
        </plant>
    </ThingDef>

</Defs>