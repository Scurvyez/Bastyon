                        <shaderParameters>
                            <_distortionScale>0.325</_distortionScale>
                            <_distortionIntensity>0.0125</_distortionIntensity>
                            <_DistortionTex>/Other/Ripples</_DistortionTex>
                        </shaderParameters>
                        <damageData>
                            <enabled>false</enabled>
                        </damageData>
                    </li>
                </graphicsGameCondition>
