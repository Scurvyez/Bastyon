<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!--==================== Snipping Snail Body ====================-->

	<BodyDef>
		<defName>Bast_SnippingSnail</defName>
		<label>snipping snail</label>
		<corePart>
			<def>Bast_SnailBody</def>
			<coverage>0.10</coverage>
			<height>Middle</height>
			<depth>Outside</depth>

			<parts>
				<li>
					<def>Heart</def>
					<coverage>0.1</coverage>
					<depth>Inside</depth>
				</li>
				<li>
					<def>Lung</def>
					<customLabel>left lung</customLabel>
					<coverage>0.05</coverage>
					<depth>Inside</depth>
				</li>
				<li>
					<def>Lung</def>
					<customLabel>right lung</customLabel>

					<coverage>0.05</coverage>
					<depth>Inside</depth>
				</li>
				<li>
					<def>Stomach</def>
					<coverage>0.05</coverage>
					<depth>Inside</depth>
				</li>
				<li>
					<def>Liver</def>
					<coverage>0.05</coverage>
					<depth>Inside</depth>
				</li>
				<li>
					<def>Kidney</def>
					<customLabel>left kidney</customLabel>

					<coverage>0.05</coverage>
					<depth>Inside</depth>
				</li>
				<li>
					<def>Bast_GastropodShell</def>
					<coverage>0.3</coverage>
				</li>
                <li>
					<def>Bast_BladedLeftLeg</def>
					<coverage>0.1</coverage>
					<groups>
						<li>FrontLeftClaws</li>
					</groups>
				</li>
                <li>
					<def>Bast_BladedRightLeg</def>
					<coverage>0.1</coverage>
					<groups>
						<li>FrontRightClaws</li>
					</groups>
				</li>
				<li>
					<def>Head</def>
					<coverage>0.1</coverage>
					<groups>
						<li>HeadAttackTool</li>
					</groups>
					<parts>
						<li>
							<def>Skull</def>
							<coverage>0.05</coverage>
							<depth>Inside</depth>
							<parts>
								<li>
									<def>Brain</def>
									<coverage>0.5</coverage>
									<depth>Inside</depth>
								</li>
							</parts>
						</li>
						<li>
							<def>Bast_SnailEyeStalk</def>
							<customLabel>left eyestalk</customLabel>
							<coverage>0.05</coverage>
						</li>
						<li>
							<def>Bast_SnailEyeStalk</def>
							<customLabel>right eyestalk</customLabel>
							<coverage>0.05</coverage>
						</li>

						<li>
							<def>Jaw</def>
							<coverage>0.1</coverage>
						</li>
					</parts>
				</li>
			</parts>
		</corePart>
	</BodyDef>
	
</Defs>