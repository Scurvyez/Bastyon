                <cooldownTime>1.3</cooldownTime>
                <linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <label>right talon</label>
                <capacities>
                    <li>Scratch</li>
                </capacities>
                <power>10</power>
                <cooldownTime>1.3</cooldownTime>
                <linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
                <surpriseAttack>
                    <extraMeleeDamages>
                        <li>
                            <def>Stun</def>
                            <amount>14</amount>
                        </li>
                    </extraMeleeDamages>
                </surpriseAttack>
            </li>
            <li>
                <capacities>
                    <li>Bite</li>
                </capacities>
                <power>14</power>
                <cooldownTime>1.8</cooldownTime>
                <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
