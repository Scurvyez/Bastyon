<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<!--==================== Scire Fireball Ranged Attack Sound ====================-->

	<SoundDef>
		<defName>Bast_ScireFireBall</defName>
		<context>MapOnly</context>
		<eventNames />
        <maxSimultaneous>4</maxSimultaneous>
		<subSounds>
			<li>
				<grains>
					<li Class="AudioGrain_Folder"> <!-- Use "AudioGrain_Folder" for multiple sound files per SoundDef. -->
						<clipFolderPath>Bast_ScireFireBall</clipFolderPath>
					</li>
				</grains>
				<sustainLoop>False</sustainLoop>
                <volumeRange>60~60</volumeRange>      
                <pitchRange>0.95~1.05</pitchRange>      
                <distRange>0~70</distRange>
			</li>
		</subSounds>
	</SoundDef>

