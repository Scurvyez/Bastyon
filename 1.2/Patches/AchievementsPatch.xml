<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Achievements Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd"> 
					<xpath>/Defs</xpath>
					<value>

						<!--==================== Bastyon Tab Creation ====================-->

						<AchievementsExpanded.AchievementTabDef>
							<defName>Bast_Achievements</defName>
							<label>Bastyon</label>
						</AchievementsExpanded.AchievementTabDef>

						<AchievementsExpanded.AchievementDef Name="Bast_AchievementParent" Abstract="true">					
							<bgtexPath>Achievements/Bast_AchievementBackground</bgtexPath>
							<tab>Bast_Achievements</tab>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Tame a Bahlrin ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Bahlrin_Tame</defName>
							<label>Don't Get Too Close to it...</label>
							<description>Tame the fearsome Bahlrin</description>

							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>Bast_Bahlrin</key>
										<value>1</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Bahlrin_Tame</texPath>
							<points>25</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Tame a Blazing Felidae ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Blazing_Felidae_Tame</defName>
							<label>Why Would You Ever Touch It?!</label>
							<description>Tame a Blazing Felidae</description>

							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>Bast_Blazing_Felidae</key>
										<value>1</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Blazing_Felidae_Tame</texPath>
							<points>50</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Kill 200 Bahlrins ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Bahlrin_Swarm</defName>
							<label>"One Rule. Stay in the light!"</label>
							<description>Kill 200 Bahlrins</description>

							<tracker Class="AchievementsExpanded.KillTracker">
								<kindDef>Bast_Bahlrin</kindDef>
								<count>200</count>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Bahlrin_Swarm</texPath>
							<points>150</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Tame a Scire ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Scire_Tame</defName>
							<label>Their Antlers Shimmer in the Moonlight</label>
							<description>Tame the Magejstic Scire</description>

							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>Bast_Scire</key>
										<value>1</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Scire_Tame</texPath>
							<points>25</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Tame a pair of Bastyons ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Bastyon_Tame</defName>
							<label>What a Lovely Shade of Green</label>
							<description>Tame a pair of Bastyons</description>

							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>Bast_Bastyon</key>
										<value>2</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Bastyon_Tame</texPath>
							<points>40</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Tame several Alluvium ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Alluvium_Tame</defName>
							<label>Transparent Provisions?</label>
							<description>Tame several Alluvium</description>

							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>Bast_Alluvium</key>
										<value>13</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Alluvium_Tame</texPath>
							<points>40</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Tame two Ceratoks ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Ceratok_Tame</defName>
							<label>Double the Trouble</label>
							<description>Tame Two Ceratok</description>

							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>Bast_Ceratok</key>
										<value>2</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Ceratok_Tame</texPath>
							<points>20</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Tame a Soul Eater ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Soul_Eater_Tame</defName>
							<label>Spooky Little Furball</label>
							<description>Tame a Soul Eater</description>

							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>Bast_Soul_Eater</key>
										<value>1</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Soul_Eater_Tame</texPath>
							<points>20</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Tame three Chem Tegus ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Chem_Tegu_Tame</defName>
							<label>Keep an Eye on These Guys</label>
							<description>Tame 3 Chem Tegus</description>

							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>Bast_Chem_Tegu</key>
										<value>3</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Chem_Tegu_Tame</texPath>
							<points>30</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Tame an Ethereal Lion ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Ethereal_Lion_Tame</defName>
							<label>What Big Ears You Have!</label>
							<description>Tame an Ethereal Lion</description>

							<tracker Class="AchievementsExpanded.KindDefTracker">
								<kindDefs>
									<li>
										<key>Bast_Ethereal_Lion</key>
										<value>1</value>
									</li>
								</kindDefs>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Ethereal_Lion_Tame</texPath>
							<points>20</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Collect Alluvium Jelly ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_AlluviumJelly_Collect</defName>
							<label>Mmmm... Tasty!</label>
							<description>Barter or Slaughter for 333 Alluvium Jelly</description>

							<tracker Class="AchievementsExpanded.ItemTracker">
								<def>Bast_Alluvium_Jelly</def>
								<count>333</count>
							</tracker>

							<texPath>Achievements/Bast_Achievement_AlluviumJelly_Collect</texPath>
							<points>13</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Farm 500 Chemfuel ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Chemfuel_Collect</defName>
							<label>Hot! Hot! Hot!</label>
							<description>Farm 500 Chemfuel</description>

							<tracker Class="AchievementsExpanded.ItemTracker">
								<def>Chemfuel</def>
								<count>500</count>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Chemfuel_Collect</texPath>
							<points>20</points>
						</AchievementsExpanded.AchievementDef>

						<!--==================== Kill 25 Gray Terrors ====================-->

						<AchievementsExpanded.AchievementDef ParentName="Bast_AchievementParent">
							<defName>Bast_Achievement_Gray_Terror_Kill</defName>
							<label>Man, I hate spiders!</label>
							<description>Kill 25 Gray Terrors</description>

							<tracker Class="AchievementsExpanded.KillTracker">
								<kindDef>Bast_Gray_Terror</kindDef>
								<count>25</count>
							</tracker>

							<texPath>Achievements/Bast_Achievement_Gray_Terror_Kill</texPath>
							<points>50</points>
						</AchievementsExpanded.AchievementDef>
                        
                    </value>    
				</li>
			</operations>
		</match>
	</Operation>

</Patch>
